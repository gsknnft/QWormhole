{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "lib":  ["ESNext", "DOM"],
    "baseUrl": ".",
    "rootDir": "src",
    "composite": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "types": ["node"],
    "paths": {
      "types": ["src/types/types.d.ts"],
      "types/*": ["src/types/*"]
    },
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  },
  "include": ["src", "test/negentropic-diagnostics.test.ts"],
  "exclude": ["node_modules", "dist", "**/dist", "**/test"]
}
